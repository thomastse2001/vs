@model IEnumerable<MvcApp1.Models.Role>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Role</h2>
@if (ViewBag.CanCreate ?? false)
{
<p>@Html.ActionLink("Create New", "Create")</p>
}
<label>Total:</label> @ViewBag.TotalCount
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.UniqueName)</th>
        <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
        <th>@Html.DisplayNameFor(model => model.IsDisabled)</th>
        <th>@Html.DisplayNameFor(model => model.UpdatedDt)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.UniqueName)</td>
            <td>@Html.DisplayFor(modelItem => item.DisplayName)</td>
            <td>@Html.DisplayFor(modelItem => item.IsDisabled)</td>
            <td>@Html.DisplayFor(modelItem => item.UpdatedDt)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>
                @if (ViewBag.CanEdit ?? false)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.RoleId })
                } |
                @if (ViewBag.CanDetails ?? false)
                {
                    @Html.ActionLink("Details", "Details", new { id = item.RoleId })
                } |
                @if (ViewBag.CanAssignUsers ?? false)
                {
                    @Html.ActionLink("Assign Users", "AssignUsersToRole", new { id = item.RoleId })
                } |
                @if (ViewBag.CanAssignFunc ?? false)
                {
                    @Html.ActionLink("Assign Functions", "AssignFuncToRole", new { id = item.RoleId })
                } |
                @if (ViewBag.CanDelete ?? false)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.RoleId })
                }
            </td>
        </tr>
    }
</table>
