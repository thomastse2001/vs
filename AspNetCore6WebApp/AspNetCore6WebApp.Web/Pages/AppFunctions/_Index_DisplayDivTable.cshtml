@using Microsoft.AspNetCore.Mvc.Rendering;
@using AspNetCore6WebApp.Entities;
@model IEnumerable<AppFunction>
<h7>https://html-cleaner.com/features/replace-html-table-tags-with-divs/</h7>

@if (Model != null)
{
<style>
    .divTable {
        display: table;
        width: 100%
    }

    .divTableRow {
        display: table-row
    }

    .divTableHeading {
        display: table-header-group;
        background-color: #ddd
    }

    .divTableBody {
        display: table-row-group
    }

    .divTableFoot {
        display: table-footer-group
    }

    .divTableCell, .divTableHead {
        display: table-cell
    }
</style>

<div class="table-responsive">
    <div class="divTable">
        <div class="divTableRow">
            <div class="divTableHead">&nbsp;</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.AppFunctionId)</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.UniqueName)</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.DisplayName)</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.AppFuncLevelId)</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.ParentId)</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.SequentialNum)</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.IsDisabled)</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.IsNavItem)</div>
            <div class="divTableHead">@Html.DisplayNameFor(model => model.UpdatedDt)</div>
            <div class="divTableHead">Actions</div>
        </div>
        <partial name="_Index_DisplayDivTable_item" model="Model" />
    </div>
</div>    
}
