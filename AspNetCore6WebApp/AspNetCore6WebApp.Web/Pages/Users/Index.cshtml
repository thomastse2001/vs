@page
@model AspNetCore6WebApp.Web.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}
<div>
    <h2>@ViewData["Title"]</h2>
    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-text">Search</span>
                <input type="search" class="form-control" asp-for="SearchText" aria-label="Search" aria-describedby="BtnSearch" placeholder="@Html.DisplayNameFor(model => model.Users!.First().DisplayName)" />
                <span class="input-group-text" id="BtnSearch"><button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button></span>
            </div>
        </div>
    </form>
    <br />
    <a asp-page="./Edit" class="btn btn-primary"><span class="fa fa-plus"></span> Add New</a>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Users!.First().UserId)</th>
                <th>@Html.DisplayNameFor(model => model.Users!.First().LoginName)</th>
                <th>@Html.DisplayNameFor(model => model.Users!.First().DisplayName)</th>
                <th>@Html.DisplayNameFor(model => model.Users!.First().DepartmentDisplayName)</th>
                <th>@Html.DisplayNameFor(model => model.Users!.First().CategoryCode)</th>
                <th>@Html.DisplayNameFor(model => model.Users!.First().SubCategoryCode)</th>
                <th>@Html.DisplayNameFor(model => model.Users!.First().IsDisabled)</th>
                <th>Actions</th>
            </tr>
        </thead>
        @if (Model.Users != null && Model.Users.Any())
        {
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                        <td>@Html.DisplayFor(modelItem => item.LoginName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DisplayName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DepartmentDisplayName)</td>
                        <td>@Html.DisplayFor(modelItem => item.CategoryCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.SubCategoryCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsDisabled)</td>
                        <td>
                            <a class="btn" asp-page="./Details" asp-route-id="@item.UserId"><span class="fa fa-info"></span></a>
                            <a class="btn" asp-page="./Edit" asp-route-id="@item.UserId"><span class="fa fa-edit"></span></a>
                            <a class="btn" asp-page="./Delete" asp-route-id="@item.UserId"><span class="fa fa-trash"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
