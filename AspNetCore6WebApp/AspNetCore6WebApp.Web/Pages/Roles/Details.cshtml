@page "{id:int}"
@model AspNetCore6WebApp.Web.Pages.Roles.DetailsModel
@{
    ViewData["Title"] = "Role Details";
}
<div>
    <h2>@ViewData["Title"]</h2>
    @if (Model.Message != null)
    {
        <div class="alert alert-info" role="alert">@Model.Message</div>
    }
    <div class="d-flex justify-content-start">
        <div><a class="btn" asp-page="./Index"><span class="fa fa-list-alt"></span> Back to List</a></div>
        <div><a class="btn" asp-page="./Edit" asp-route-id="@Model.Role?.RoleId"><span class="fa fa-edit"></span> Edit</a></div>
        <div><a class="btn" asp-page="./Delete" asp-route-id="@Model.Role?.RoleId"><span class="fa fa-trash"></span> Delete</a></div>
    </div>
    <hr />
    <partial name="_Details" model="Model.Role" />
</div>
